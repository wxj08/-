/* 顶部轮播图 */
swiper {
  height: 360rpx;
}


/* 分类样式 */
.type_wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 50rpx;
  font-size: 45rpx;
  margin-bottom: 50rpx;
}

.active {
  border-bottom: 5rpx solid red;
  padding-bottom: 15rpx;
}



/* 资讯样式 */
.big-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
}

.img {
  width: 300rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.price-button-block {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.right {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  height: 200rpx;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 38rpx;
}


.msg {
  margin: 30rpx 30rpx;
  border-bottom: 1rpx solid #dfdfdf;
  padding-bottom: 10rpx;
}



.paotui {
  margin: 40rpx 20rpx;
  font-size: 40rpx;
  text-align: center;
  background-color: rgb(224, 224, 253);
  padding: 40rpx 0;
}